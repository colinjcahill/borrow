<h2>Please log in to continue, or sign up to create a new account.</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, size: 30 %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", size: 30 %></div>

    <p style ="padding: 5px;">

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
<p style ="padding: 10px;">
  <div><%= f.submit "Log in", style: "width: 80px;" %></div>
<% end %>
<p style ="padding: 20px;">

<%= render "devise/shared/links" %>
