<h1>Feel free to update your item info here!</h1>
<ul>

<%= form_for @item do |f| %>
<div>
    <%= f.label "Item Name:" %>
    <%= f.text_field :name, size: 50 %>
  </div>

<div>
    <%= f.label "Item Description:" %>
    <%= f.text_field :description, size: 100 %>
  </div>
<div>
    <%= f.label "Item Category:" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name ) %>

  </div>

  <div>
    <%= f.label "Approximate Value:" %>
    $<%= f.text_field :value, size: 4 %>
  </div>

  <div>
    <%= f.label "Image Path: (For now, please enter a remote/local image path)" %>
    <%= f.text_field :image_path, size: 100 %>
  </div>
<%= f.submit %>
<% end %><br><%= button_to "Delete Listing", { action: "destroy", id: @item.id },
                                method: :delete, data: { confirm: "Are you sure you want to delete \"#{@item.name}\"?" } %>

</ul>

